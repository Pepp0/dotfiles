if has("syntax")
  syntax on
endif
set ambiwidth=double
set title
set tabstop=2
set autoindent
set expandtab
set shiftwidth=2
set smartindent
set list
set listchars=tab:¦_,trail:-,eol:<,extends:»,precedes:«,nbsp:%
set nrformats-=octal
set hidden
set history=50
set virtualedit=block
set whichwrap=b,s,[,],<,>
set backspace=indent,eol,start
set wildmenu

" search
set hlsearch
set incsearch
set noignorecase
set smartcase
set wrapscan

" show
set showmatch 
set title
colorscheme simple_dark
set ruler
set number
set cursorline
syntax enable

" use shift+%
set matchpairs+=<:>

" mode
set showmode

" status
set laststatus=2
